<div class="mt-4">
    <h3>Sửa Khóa Học</h3>
    <form method="post" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mô Tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">IdVideo</label>
            <input type="text" class="form-control" value="{{courses.idVideo}}" id="idVideo" name="idVideo">
        </div>
        <div class="form-group">
            <label for="lever">Lever</label>
            <input type="text" class="form-control" value="{{courses.lever}}" id="lever" name="lever">
        </div>
        <button type="submit" class="btn btn-primary">Sửa</button>
    </form>
</div>
